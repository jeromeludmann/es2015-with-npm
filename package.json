{
  "name": "es6-workflows",
  "version": "1.0.0",
  "description": "ES2015 (ES6) Development Workflows",
  "scripts": {
    "clean": "rimraf build",
    "eslint": "eslint src",
    "babel": "babel src --presets es2015 --source-maps -d build",
    "prestart": "run-s clean babel",
    "start": "nodemon --watch build build/app.js",
    "watch": "run-p 'babel -- --watch' start"
  },
  "author": "Jérôme Ludmann",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^3.3.1",
    "nodemon": "^1.10.0",
    "npm-run-all": "^3.0.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "source-map-support": "^0.4.2"
  }
}
