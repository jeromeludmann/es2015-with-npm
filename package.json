{
  "name": "es6-workflows",
  "version": "1.1.0",
  "description": "ES2015 (ES6) Development Workflows",
  "scripts": {
    "clean": "rimraf build",
    "lint": "eslint src",
    "tsc": "tsc --rootDir src --sourceMap --outDir build/es6",
    "babel": "babel build/es6 --presets es2015 --source-maps --out-dir build/es5",
    "sorcery": "sorcery --input build/es5 --output build",
    "build": "npm run lint && npm run tsc && npm run babel && npm run sorcery",
    "start": "node build/es5/app.js",
    "watch": "nodemon --watch src --ext ts --exec 'npm run build && npm run start'"
  },
  "author": "Jérôme Ludmann",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "eslint": "^3.3.1",
    "eslint-friendly-formatter": "^2.0.6",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-nodemon": "^2.1.0",
    "gulp-sourcemaps": "^1.6.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^3.0.0",
    "rimraf": "^2.5.4",
    "sorcery": "^0.10.0",
    "typescript": "^1.8.10"
  },
  "dependencies": {
    "source-map-support": "^0.4.2"
  }
}
