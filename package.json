{
    "name": "es2015-with-npm",
    "version": "1.0.0",
    "description": "ES2015 with npm (instead of Grunt/Gulp)",
    "scripts": {
        "start": "node build/app.js",
        "clean": "rm -rf build",
        "eslint": "eslint src",
        "babel": "babel src --presets es2015 --source-maps -d build",
        "compile": "npm run clean && npm run eslint && npm run babel",
        "watch": "watch --interval=1 'npm run compile && npm run start' src"
    },
    "author": "Jérôme Ludmann",
    "license": "UNLICENSED",
    "devDependencies": {
        "babel-cli": "^6.11.4",
        "babel-preset-es2015": "^6.9.0",
        "eslint": "^3.1.1",
        "watch": "^0.19.1"
    },
    "dependencies": {
        "source-map-support": "^0.4.2"
    }
}
